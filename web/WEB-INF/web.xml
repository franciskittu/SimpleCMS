<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>java:comp/env/jdbc/cms</param-value>
    </context-param>
    <context-param>
        <param-name>system.css_directory</param-name>
        <param-value>css</param-value>
    </context-param>
    <context-param>
        <param-name>system.image_directory</param-name>
        <param-value>images</param-value>
    </context-param>
    <context-param>
        <param-name>system.thumb_directory</param-name>
        <param-value>images/thumbs</param-value>
    </context-param>
    <context-param>
        <param-name>system.slide_directory</param-name>
        <param-value>slides</param-value>
    </context-param>
    <listener>
        <description>Inizializza il pool di connesioni per il database fornendo il datasource alle altre servlet</description>
        <listener-class>it.lufraproini.cms.config.ContextInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>EsempioDS</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.EsempioDS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvaFreemarkereDB</servlet-name>
        <servlet-class>it.lufraproini.cms.ProvaFreemarkereDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AggiungiCSS</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.AggiungiCSS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>site</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.site</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>image</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.image</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostra</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.mostra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>provaAlbero</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.provaAlbero</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.edit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.delete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>move</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.move</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>style</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.style</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload_user_img</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.upload_user_img</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cover</servlet-name>
        <servlet-class>it.lufraproini.cms.servlet.cover</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EsempioDS</servlet-name>
        <url-pattern>/EsempioDS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProvaFreemarkereDB</servlet-name>
        <url-pattern>/ProvaFreemarkereDB</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.author</param-name>
        <param-value>Luca Traini e Francesco Proietti</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
        <!--da modificare-->
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>errore.ftl.html</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>AggiungiCSS</servlet-name>
        <url-pattern>/AggiungiCSS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>site</servlet-name>
        <url-pattern>/site</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostra</servlet-name>
        <url-pattern>/visualizza</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>provaAlbero</servlet-name>
        <url-pattern>/provaAlbero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>move</servlet-name>
        <url-pattern>/move</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>style</servlet-name>
        <url-pattern>/style</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload_user_img</servlet-name>
        <url-pattern>/upload_user_img</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cover</servlet-name>
        <url-pattern>/cover</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/cms</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>visualizza</welcome-file>
    </welcome-file-list>
</web-app>
